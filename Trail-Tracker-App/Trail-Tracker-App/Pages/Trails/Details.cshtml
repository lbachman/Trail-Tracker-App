@page
@model Trail_Tracker_App.Pages.Trails.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Trail</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Trail.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Trail.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Trail.Difficulty)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Trail.Difficulty)
        </dd>
        <dt class="col-sm-2">
            Length(mi)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Trail.Length)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Trail.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Trail.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Trail.Mountain)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Mountain.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Trail.TrailId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>


<div class="container">
    <div class="row">
        @foreach (var picture in Model.Trail.Pictures)
        {
            <div class="col-md-3">
                <div class="card mb-4 shadow-sm">
                    <img src="@picture.FilePath" class="card-img-top" alt="Picture" style="max-width: 100%; height: auto;">
                    <div class="card-body">
                        <p class="card-text">@picture.Trail.Name</p>

                    </div>
                </div>
            </div>
        }
    </div>
</div>
