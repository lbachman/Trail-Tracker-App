@page
@model Trail_Tracker_App.Pages.Trails.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Trails</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Trail[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Trail[0].Mountain)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Trail[0].Difficulty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Trail[0].Length) (mi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Trail[0].Description)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Trail) {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Mountain.Name)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Difficulty)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Length)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            
            <td>
                <a asp-page="./Edit" asp-route-id="@item.TrailId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.TrailId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.TrailId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
