@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Trail</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TrailDTO.MountainName" class="control-label"></label>
                <select asp-for="TrailDTO.MountainName" class ="form-control" asp-items="ViewBag.MountainName"></select>
            </div>
            <div class="form-group">
                <label asp-for="TrailDTO.Name" class="control-label"></label>
                <input asp-for="TrailDTO.Name" class="form-control" />
                <span asp-validation-for="TrailDTO.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TrailDTO.Difficulty" class="control-label"></label>
                <input asp-for="TrailDTO.Difficulty" class="form-control" />
                <span asp-validation-for="TrailDTO.Difficulty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TrailDTO.Length" class="control-label"></label>
                <input asp-for="TrailDTO.Length" class="form-control" />
                <span asp-validation-for="TrailDTO.Length" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TrailDTO.Description" class="control-label"></label>
                <input asp-for="TrailDTO.Description" class="form-control" />
                <span asp-validation-for="TrailDTO.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

