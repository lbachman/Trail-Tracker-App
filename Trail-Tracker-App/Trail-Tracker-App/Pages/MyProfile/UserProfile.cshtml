@page
@model Trail_Tracker_App.Pages.MyProfile.UserProfileModel

@{
    ViewData["Title"] = "UserProfile";
}

<h1>@Model.User.Identity.Name</h1>

<div>
    <h4>Userprofile</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Userprofile.Bio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Userprofile.Bio)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Userprofile.ProfilePicture)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Userprofile.ProfilePicture)
        </dd>
        
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Userprofile.UserProfileId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>

@* user picture list *@
<div class="row">
    @foreach (var item in Model.PictureList)
    {
        <div class="col-md-4">
            <div class="card mb-4">
                <a asp-page="../Pictures/Details" asp-route-id="@item.PictureId" class="card-link">
                    <img class="card-img-top" src="@item.FilePath" alt="Trail picture" />
                    <div class="card-body">
                        @*   <h5 style="padding: 10px" class="card-title">@item.</h5> *@
                        <p style="padding: 10px" class="card-text">Uploaded by: @item.UploadedBy</p>
                        <p style="padding: 10px" class="card-text">Upload date: @item.UploadDate</p>
                    </div>
                </a>
                <div class="card-body">
                    <div class="btn-group" role="group">
                        <a asp-page="./Edit" asp-route-id="@item.PictureId" class="btn btn-secondary">Edit</a>
                        <a asp-page="./Delete" asp-route-id="@item.PictureId" class="btn btn-danger">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
