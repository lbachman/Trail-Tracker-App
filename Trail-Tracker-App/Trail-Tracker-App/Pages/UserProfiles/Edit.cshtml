@page
@model Trail_Tracker_App.Pages.UserProfiles.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Userprofile</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Userprofile.UserProfileId" />
            <div class="form-group">
                <label asp-for="Userprofile.UserId" class="control-label"></label>
                <select asp-for="Userprofile.UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                <span asp-validation-for="Userprofile.UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Userprofile.Bio" class="control-label"></label>
                <input asp-for="Userprofile.Bio" class="form-control" />
                <span asp-validation-for="Userprofile.Bio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Userprofile.ProfilePicture" class="control-label"></label>
                <input asp-for="Userprofile.ProfilePicture" class="form-control" />
                <span asp-validation-for="Userprofile.ProfilePicture" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
