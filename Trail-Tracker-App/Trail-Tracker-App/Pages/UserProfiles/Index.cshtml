@page
@model Trail_Tracker_App.Pages.UserProfiles.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>User Profiles</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Userprofile[0].Bio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Userprofile[0].ProfilePicture)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Userprofile[0].User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Userprofile) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Bio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProfilePicture)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.UserName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.UserProfileId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.UserProfileId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.UserProfileId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
