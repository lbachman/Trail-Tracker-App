@page
@model Trail_Tracker_App.Pages.UserProfiles.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>User Profiles</h1>

<p>
    <a class="btn btn-info" role="button" asp-page="Create">Create Profile</a>
</p>
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Userprofile[0].User)</th>
                <th>@Html.DisplayNameFor(model => model.Userprofile[0].Bio)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Userprofile)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.User.UserName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Bio)</td>
                    <td>
                        
                        <a class="btn btn-secondary" asp-page="./Details" asp-route-id="@item.UserProfileId">View</a> 
                        
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

