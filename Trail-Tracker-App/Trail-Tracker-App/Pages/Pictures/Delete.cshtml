@page
@model Trail_Tracker_App.Pages.Pictures.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Picture</h4>
    <hr />
    <dl class="row">       
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Picture.UploadedBy)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Picture.UploadedBy)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Picture.UploadDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Picture.UploadDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Picture.Trail)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Picture.Trail.TrailId)
        </dd>
    </dl>

    <div class="col-md-3">
        <div class="card mb-4 shadow-sm">
            <img src="@Model.Picture.FilePath" class="card-img-top" alt="Picture" style="max-width: 100%; height: auto;">
            <div class="card-body">
            </div>
        </div>
    </div>
    
    <form method="post">
        <input type="hidden" asp-for="Picture.PictureId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="btn btn-outline-secondary" asp-page="./Index">Back to List</a>
    </form>
</div>
