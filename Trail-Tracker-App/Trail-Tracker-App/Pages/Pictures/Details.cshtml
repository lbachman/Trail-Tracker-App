@page
@model Trail_Tracker_App.Pages.Pictures.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Picture</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Picture.FilePath)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Picture.FilePath)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Picture.UploadedBy)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Picture.UploadedBy)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Picture.UploadDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Picture.UploadDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Picture.Trail)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Picture.Trail.TrailId)
        </dd>
    </dl>
</div>


<div class="container">
    <div class="row">
            <div class="col-md-3">
                <div class="card mb-4 shadow-sm">
                    <img src="@Model.Picture.FilePath" class="card-img-top" alt="Picturee" style="max-width: 100%; height: auto;">
                    <div class="card-body">
                        <p class="card-text">Model.Picture.Trail.Name</p>
                    </div>
                </div>
            </div>
        
    </div>
</div>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.Picture.PictureId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
