@page
@model Trail_Tracker_App.Pages.Pictures.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Picture</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Picture.UploadedBy)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Picture.UploadedBy)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Picture.UploadDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Picture.UploadDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Picture.Trail)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Trail.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Mountain)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Mountain.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Range)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Range.Name)
        </dd>
    </dl>
</div>


<div class="containerPic">
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4 shadow-sm">
                <img src="@Model.Picture.FilePath" class="card-img-top img-fluid" alt="Picture" style="width: 100%; height: auto; object-fit: cover;">
                <div class="card-body">
                    <dl class="row">
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Picture.Trail.Name)
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>

<div>
    <a class="btn btn-secondary" asp-page="./Edit" asp-route-id="@Model.Picture.PictureId">Edit</a> |
    <a class="btn btn-outline-secondary" asp-page="./Index">Back to List</a>
</div>
