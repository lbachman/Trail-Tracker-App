@page
@model Trail_Tracker_App.Pages.Mountains.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Mountain</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Mountain.MountainId" />
            <div class="form-group">
                <label asp-for="MtDTO.RangeName" class="control-label"></label>
                <select asp-for="MtDTO.RangeName" class="form-control" asp-items="ViewBag.Name"></select>
                <span asp-validation-for="MtDTO.RangeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MtDTO.Name" class="control-label"></label>
                <input asp-for="MtDTO.Name" class="form-control" />
                <span asp-validation-for="MtDTO.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MtDTO.Zip" class="control-label"></label>
                <input asp-for="MtDTO.Zip" class="form-control" />
                <span asp-validation-for="MtDTO.Zip" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MtDTO.Height" class="control-label"></label>
                <input asp-for="MtDTO.Height" class="form-control" />
                <span asp-validation-for="MtDTO.Height" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MtDTO.Description" class="control-label"></label>
                <input asp-for="MtDTO.Description" class="form-control" />
                <span asp-validation-for="MtDTO.Description" class="text-danger"></span>
            </div>
            <div class="form-group"><br>
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br>

<div>
    <a class="btn btn-outline-secondary" asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
