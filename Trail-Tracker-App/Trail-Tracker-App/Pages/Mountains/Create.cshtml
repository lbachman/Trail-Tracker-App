@page
@model Trail_Tracker_App.Pages.Mountains.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Mountain</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Mountain.Range.Name" class="control-label">Mountian Range</label>
                <select asp-for="MountainDTO.Range" class ="form-control" asp-items="ViewBag.Name"></select>
            </div>

            <div class="form-group">
                <label asp-for="MountainDTO.Name" class="control-label"></label>
                <input asp-for="MountainDTO.Name" class="form-control" />
                <span asp-validation-for="MountainDTO.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MountainDTO.Location" class="control-label"></label>
                <input asp-for="MountainDTO.Location" class="form-control" />
                <span asp-validation-for="MountainDTO.Location" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MountainDTO.Height" class="control-label">Height (ft)</label>
                <input asp-for="MountainDTO.Height" class="form-control" />
                <span asp-validation-for="MountainDTO.Height" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MountainDTO.Description" class="control-label"></label>
                <input asp-for="MountainDTO.Description" class="form-control" />
                <span asp-validation-for="MountainDTO.Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
