@page
@model Trail_Tracker_App.Pages.Mountains.DetailsModel
@using Trail_Tracker_App.Pages.Services

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Mountain</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Mountain.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Mountain.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Mountain.Zip)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Mountain.Zip)
        </dd>
        <dt class="col-sm-2">
            Height(ft)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Mountain.Height)
        </dd>
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Mountain.Range)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Range.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Mountain.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Mountain.Description)
        </dd>
    </dl>
</div><br>
<hr>


<div class="row">
    @foreach (var item in Model.PictureList)
    {
        <div class="col-md-4">
            <div class="card mb-4">
                <a asp-page="../Pictures/Details" asp-route-id="@item.PictureId" class="card-link">
                    <img class="card-img-top" src="@item.FilePath" alt="Trail picture" />
                    <div class="card-body">
                      @*   <h5 style="padding: 10px" class="card-title">@item.</h5> *@
                        <p style="padding: 10px" class="card-text">Uploaded by: @item.UploadedBy</p>
                        <p style="padding: 10px" class="card-text">Upload date: @item.UploadDate</p>
                    </div>
                </a>
                <div class="card-body">
                    <div class="btn-group" role="group">
                        <a asp-page="./Edit" asp-route-id="@item.PictureId" class="btn btn-secondary">Edit</a>
                        <a asp-page="./Delete" asp-route-id="@item.PictureId" class="btn btn-danger">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<hr>

@* current weather *@
<br>
<br>
<h4>Current Weather</h4>
<hr />
<table class="table table-bordered table-striped table-semi-solid">
    <thead>
        <tr>
            
            <th>Temperature</th>           
            <th>Precipitation</th>
            <th>Cloud Cover</th>
            <th>WindSpeed</th>
            <th>Wind Direction</th>
            <th>Wind Gust</th>
            <th>Visibility</th>
            <th>Dew Point</th>
            <th>Sunrise Time</th>
            <th>Sunset Time</th>
        </tr>
    </thead>
    <tbody>
        
            <tr>                
                <td>@Model.WeatherData.location.currentConditions.temp</td>
                <td>@Model.WeatherData.location.currentConditions.precip</td>
                <td>@Model.WeatherData.location.currentConditions.cloudcover%</td>
                <td>@Model.WeatherData.location.currentConditions.wspd mph</td>
                <td>@Model.WeatherData.location.currentConditions.wdir</td>
                <td>@Model.WeatherData.location.currentConditions.wgust</td>
                <td>@Model.WeatherData.location.currentConditions.visibility</td>
                <td>@Model.WeatherData.location.currentConditions.dew</td>
                <td>@Model.WeatherData.location.currentConditions.sunrise.ToShortTimeString()</td>
                <td>@Model.WeatherData.location.currentConditions.sunset.ToShortTimeString()</td>
            </tr>
        
    </tbody>
</table>

@* Moon Section *@
<hr>
<h4>Moon</h4>
<h5>@Model.Moon.Heading</h5>
<img class="w-50" src="@Model.Moon.FilePath"></img>

@*  7 day forecast *@
<hr>
<br>
<h4>7-Day Forecast</h4>
<hr />
<table class="table table-bordered table-striped table-semi-solid">
    <thead>
        <tr>
            <th>Date</th>
            <th>Temperature</th>
            <th>Sunrise Time</th>
            <th>Sunset Time</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < 7; i++)
        {
            <tr>
                <td>@Model.WeatherData.location.values[i].datetimeStr.ToShortDateString()</td>
                <td>@Model.WeatherData.location.values[i].temp</td>              
                <td>@Model.WeatherData.location.values[i].sunrise.ToShortTimeString()</td>
                <td>@Model.WeatherData.location.values[i].sunset.ToShortTimeString()</td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@Model.Mountain.MountainId">Edit</a> |
    <a class="btn btn-primary" asp-page="./Index">Back to List</a>
</div>