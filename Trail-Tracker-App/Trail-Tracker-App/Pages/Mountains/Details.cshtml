@page
@model Trail_Tracker_App.Pages.Mountains.DetailsModel
@using Trail_Tracker_App.Pages.Services

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Mountain</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Mountain.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Mountain.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Mountain.Zip)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Mountain.Zip)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Mountain.Height)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Mountain.Height)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Mountain.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Mountain.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Mountain.Range)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Range.Name)
        </dd>
    </dl>
</div><br>



<div class="container">
    <div class="row">
        @foreach (var picture in Model.PictureList)
        {
            <div class="col-md-3">
                <div class="card mb-4 shadow-sm">
                    <img src="@picture.FilePath" class="card-img-top" alt="Picture" style="max-width: 100%; height: auto;">
                    <div class="card-body">
                        @* <p class="card-text">@picture.</p> *@

                    </div>
                </div>
            </div>
        }
    </div>
</div>



@*  weather api table *@
<br>
<br>
<h4>7-Day Forecast</h4>
<hr />
<table class="table table-bordered table-striped table-semi-solid">
    <thead>
        <tr>
            <th>Date</th>
            <th>Temperature</th>
            <th>Sunrise Time</th>
            <th>Sunset Time</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < 7; i++)
        {
            <tr>
                <td>@Model.WeatherData.location.values[i].datetimeStr.ToShortDateString()</td>
                <td>@Model.WeatherData.location.values[i].temp</td>              
                <td>@Model.WeatherData.location.values[i].sunrise.ToShortTimeString()</td>
                <td>@Model.WeatherData.location.values[i].sunset.ToShortTimeString()</td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.Mountain.MountainId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>