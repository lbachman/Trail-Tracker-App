@page
@model Trail_Tracker_App.Pages.Mountains.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Mountains</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Mountain[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mountain[0].Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mountain[0].Height) (ft)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mountain[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mountain[0].Range) 
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Mountain) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Height)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Range.Name)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.MountainId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.MountainId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.MountainId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
